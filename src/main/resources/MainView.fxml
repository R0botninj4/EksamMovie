<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.MainController">

    <!-- ================= TOP: FILTER & SEARCH ================= -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="10">
                <Label text="Search:"/>
                <TextField fx:id="txtSearch" HBox.hgrow="ALWAYS"/>
                <Label text="Min IMDB:"/>
                <Spinner fx:id="spnMinRating" prefWidth="80"/>
                <Button text="Clear Filters" onAction="#handleClearFilters"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Categories:"/>
                <ListView fx:id="lstCategories" prefHeight="80" prefWidth="200"/>
            </HBox>
        </VBox>
    </top>

    <!-- ================= CENTER: TABLE ================= -->
    <center>
        <TableView fx:id="tblMovies">
            <columns>
                <TableColumn fx:id="colTitle" text="Title" prefWidth="200"/>
                <TableColumn fx:id="colImdb" text="IMDB" prefWidth="60"/>
                <TableColumn fx:id="colPersonal" text="Personal Rating" prefWidth="120"/>
                <TableColumn fx:id="colCategories" text="Categories" prefWidth="220"/>
                <TableColumn fx:id="colLastViewed" text="Last Viewed" prefWidth="120"/>
                <TableColumn fx:id="colDirectors" text="Director" />
            </columns>
        </TableView>
    </center>

    <!-- ================= RIGHT: ADD MOVIE PANEL ================= -->
    <right>
        <VBox spacing="10" prefWidth="300">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Add Movie" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <TextField fx:id="txtTitle" promptText="Movie title"/>
            <TextField fx:id="txtDirectors" promptText="Directors"/>

            <Label text="IMDB Rating"/>
            <Spinner fx:id="spnImdbRating"/>

            <Label text="Personal Rating"/>
            <Spinner fx:id="spnPersonalRating"/>

            <Label text="Categories"/>
            <ListView fx:id="lstAddCategories" prefHeight="120"/>

            <Button text="Choose movie file"
                    onAction="#chooseMovieFile"/>

            <Label fx:id="lblFilePath"
                   text="No file selected"
                   wrapText="true"
                   style="-fx-text-fill: gray;"/>

            <Separator/>

            <Button text="Add Movie"
                    onAction="#handleAddMovie"
                    maxWidth="Infinity"/>
        </VBox>
    </right>

    <!-- ================= BOTTOM: CONTROLS ================= -->
    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Remove Movie" onAction="#handleRemoveMovie"/>
            <Button text="Play Movie" onAction="#handlePlayMovie"/>

            <Label text="Personal Rating:"/>
            <Slider fx:id="sldPersonalRating"
                    min="0" max="10"
                    blockIncrement="1"
                    majorTickUnit="1"
                    showTickMarks="true"
                    showTickLabels="true"/>

            <Button text="Save Rating" onAction="#handleSaveRating"/>
        </HBox>
    </bottom>

</BorderPane>
